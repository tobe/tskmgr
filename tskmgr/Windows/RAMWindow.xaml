<MahApps:MetroWindow x:Class="tskmgr.RAMWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:MahApps="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:Controls="clr-namespace:tskmgr.Controls"
        xmlns:local="clr-namespace:tskmgr"
        mc:Ignorable="d"
        Title="RAM Graph" Height="400" Width="600"
                     
        BorderThickness="1" 
        BorderBrush="{DynamicResource AccentColorBrush}"

        WindowTransitionsEnabled="True"
        WindowStartupLocation="CenterScreen"
                     
        WindowTitleBrush="#d35400">

    <Grid>
        <Controls:RAMControl></Controls:RAMControl>
    </Grid>
</MahApps:MetroWindow>